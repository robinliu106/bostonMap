extends layout
block content
    h3 #{title}
    h3 Measuring The Childfriendliness of Various Neighborhoods in Boston
    
    div(id='hide_data')
        div(id='schools') #{schools}
        div(id='school_coords') #{school_coords}
        div(id='hospitals') #{hospitals}
        div(id='hospital_coords') #{hospital_coords}
        div(id='crime_coords') #{crime_coords}
        div(id='property_coords') #{property_coords}
        div(id='neighborhood_scores') #{neighborhood_scores}
        


    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCy6u1aDoikw1_TnS0SZcy4PkJDOBjaOeU&libraries=visualization')
    script(src='http://code.jquery.com/jquery-1.11.0.min.js')
    script(src='https://cdn.plot.ly/plotly-latest.min.js')
    script(src='https://unpkg.com/leaflet@1.0.2/dist/leaflet.js')
    
    script(src='/javascripts/map.js')

    
    p(id='origin_address') Marker Address:
     
    p(id='hospital_name') Hospital Name: 
    p(id='dest_address_hospital') Closest Hospital Address:
    p(id='distance_hospital') Distance to hospital: 
    
    p(id='school_name') School Name: 
    p(id='dest_address_school') Closest School Address:
    p(id='distance_school') Distance to school: 

    p(id='score') Score: 

    div(id='floating-panel')
        button(onclick='initialize()' ) Remove Markers
        button(onclick='toggle_heatmap_school()') Toggle School Heatmap
        button(onclick='toggle_heatmap_hospital()') Toggle Hospital Heatmap


    div(id='legend') Legend
        p Red : Hospitals
        p Green : Schools
    
    div(id='map')
    
    h3 Interactive Graphs of Boston Neighborhoods

    div(id='floating-panel-graph')
        button(id='property_graph_toggle' onclick='property_graph_toggle') Property
        button(id='school_graph_toggle' onclick='school_graph_toggle' ) School
        button(id='crime_graph_toggle' onclick='crime_graph_toggle') Crime
        button(id='hospital_graph_toggle' onclick='hospital_graph_toggle' ) Hospital

    
    div(id='property_graph') 
    div(id='crime_graph') 
    div(id='school_graph') 
    div(id='hospital_graph') 
    script(src='/javascripts/plotly.js')
    
    h3 Interactive Chloropleth Map of Boston Neighborhood Scores
    
    div(id='mapid')
    div(class='info')
    script(src='/javascripts/chloropleth.js')
    
    
    
